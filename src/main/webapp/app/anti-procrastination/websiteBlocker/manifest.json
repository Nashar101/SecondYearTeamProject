{
  "manifest_version": 3,
  "name": "Anti-Procrastination",
  "version": "0.0.1",
  "type": "module",
  "background": {
    "service_worker": "background.js"
  },
  "externally_connectable": {
    "matches": ["<all_urls>"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["style.css"],
      "js": ["Content.js"]
    }
  ]
}
